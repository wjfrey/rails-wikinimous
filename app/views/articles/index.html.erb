<div class="container">
  <h3>Articles</h3>

  <ul>
    <% @articles.each do |article| %>
      <li class="list-item"> <%= link_to article.title, article_path(article) %> <%= link_to 'Delete Article', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%></li>
    <% end %>
  </ul>
</div>
